<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>homeAdmin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="/css/adexam.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md navigation-clean-search">
        <div class="container"><a class="navbar-brand" href="#">Gia Dinh University</a><button class="navbar-toggler"
                data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span
                    class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <form class="form-inline mr-auto" target="_self">
                    <div class="form-group"><label for="search-field"></label></div>
                </form><a class="btn btn-light action-button" role="button" href="#">Logot</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col">
                <div>
                    <h3 class="text-center">Danh sách đề</h3>
                </div>
                <div class="table-responsive">
                    <table class="table fixed_header">
                        <thead>
                            <tr>
                                <th>Mã đề</th>
                                <th>Môn</th>
                                <th>Thời gian</th>
                                <th>Học kỳ</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="noiDung">
                                <td>123</td>
                                <td>Tin học văn phòng</td>
                                <td>10</td>
                                <td>3</td>
                                <td>10/7/1998</td>
                                <td>open</td>
                            </tr>
                        </tbody>
                    </table>
                </div><button class="btn btn-primary btn-lg btnThemDe" id="btnCreateExam" type="button">Tạo đề
                    thi</button>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/js/bootstrap.bundle.min.js"></script>
    <script>
        btnCreateExam.onclick = () => {
            document.location.href = "/admin/createExam";
        }

        var examList = Doc_Danh_sach_De_thi().Danh_sach_De_thi;
        var html = "";
        examList.forEach(exam => {
            exam.question_list.forEach(content => {
                html +=`<tr>
                                <td>${content.exam_code}</td>
                                <td>${content.subject}</td>
                                <td>${content.time}</td>
                                <td>${content.semester}</td>
                                <td>${content.date_created}</td>
                                <td>${content.status}</td>
                            </tr>`     
            });
        });
        noiDung.innerHTML = html;
    </script>
</body>

</html>