            aria-controls="navbarSupportedContent-555" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent-555">
            <ul class="navbar-nav mr-auto" style="position: absolute;left: 50%;">
                <li class="nav-item active">

                    <a class="nav-link" href="#">
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto nav-flex-icons">
                <li class="nav-item avatar">
                    <a class="nav-link p-0" id="navbarDropdownMenuLink-55" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <img src="/img/andanh.png" class="rounded-circle z-depth-0" alt="avatar image" height="35">
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary"
                        aria-labelledby="navbarDropdownMenuLink-55">
                        <a class="dropdown-item" href="#">Tài khoản</a>
                        <a class="dropdown-item" href="/users/logout">Đăng xuất</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <!--/.Navbar -->
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Khoa</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col">
                <div>
                    <h3 class="text-center">Danh sách khoa</h3>
                </div>
                <div class="table-responsive">
                    <table class="table fixed_header">
                        <thead>
                            <tr>
                                <th>Khoa</th>
                                <th>Số chuyên ngành</th>
                                <th>Số lớp</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="list_faculty">


                        </tbody>
                    </table>
                </div><button class="btn btn-primary btn-lg" style="width: 100%;" id="btnAddFaculty" type="button">Tạo khoa</button>
            </div>
        </div>
    </div>
    <div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="my-modal-title">Tạo tài khoản</h3>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/admin/users" method="POST">
                        <div class="row">
                            <div class="col">
                                <div class="group" style="margin-bottom: 45px;"><input id="fullName" class="input"
                                        type="text" name="fullName"  /><span class="highlight"></span><span
                                        class="bar"></span><label class="label">Họ tên</label>
                                </div>
                                <div class="group" style="margin-bottom: 45px;"><input id="identityCardNumber"
                                        class="input" type="number" name="identityCardNumber"  /><span class="highlight"></span><span
                                        class="bar"></span><label class="label">Số chứng minh nhân dân</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="group" style="margin-bottom: 45px;"><input id="studentCode" class="input"
                                        type="number"  name="studentCode"/><span class="highlight"></span><span
                                        class="bar"></span><label class="label">Mã số sinh viên</label>
                                </div>
                                <div class="group"><input id="address" class="input" type="address"  name="address"/><span
                                        class="highlight"></span><span class="bar"></span><label class="label">Địa
                                        chỉ</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="group" style="margin-bottom: 45px;"><input id="dateOfBirth" class="input"
                                        type="date" value="2019-01-01" name="dateOfBirth" /><span class="highlight"></span><span
                                        class="bar"></span><label class="label">Ngày sinh</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="group" style="margin-bottom: 45px;"><input id="placeOfBirth" class="input"
                                        type="text" name="placeOfBirth" /><span class="highlight"></span><span
                                        class="bar"></span><label class="label">Nơi sinh</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div style="margin-top: 8px;">
                                    <div class="field"><select class="form-control" id="sex" name="sex"
                                            style="border: none;border-bottom: 1px solid #757575;border-radius: 0;">
                                            <optgroup label="Chọn giới tính">
                                                <option value="Nam" selected>Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </optgroup>
                                        </select></div>
                                </div>
                            </div>
                            <div class="col">
                                <div style="margin-top: 8px;">
                                    <div class="field"><select class="form-control" id="studentStatus" name="studentStatus"
                                            style="border: none;border-bottom: 1px solid #757575;border-radius: 0;">
                                            <optgroup label="Chọn trạng thái">
                                                <option value="Đăng ký" selected>Đăng ký</option>
                                                <option value="Đang học">Đang học</option>
                                                <option value="Bảo lưu">Bảo lưu</option>
                                            </optgroup>
                                        </select></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div style="margin-top: 8px;">
                                    <div class="field"><select class="form-control" name="myFacultyOnModal"
                                            style="border: none;border-bottom: 1px solid #757575;border-radius: 0;"
                                            id="myFacultyOnModal" onchange="chooseFaculty()">
                                            <optgroup label="Chọn khoa" id="list_faculty_modal">
                                            </optgroup>
                                        </select></div>
                                </div>
                            </div>
                            <div class="col">
                                <div style="margin-top: 8px;">
                                    <div class="field"><select class="form-control" name="myClassOnModal"
                                            style="border: none;border-bottom: 1px solid #757575;border-radius: 0;"
                                            id="myClassOnModal" onchange="chooseClass()">
                                            <optgroup label="Chọn lớp" id="list_class_modal">
                                            </optgroup>
                                        </select></div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" style="width: 100%;" class="btn btn-primary" id="btnCreateAccount">Đồng
                            ý</button>
                    </form>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
    <script src="/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/Studious-selectbox.js"></script>
    <script src="/business/dataForAdmin.js"></script>
    <script>
        var htmlListFaculty = "";
        listClass.forEach(clas => {
            htmlListFaculty += `<tr>
                                <td>${clas.faculty}</td>
                                <td>${clas.list_major.length}</td>
                                <td>${clas.list_class.length}</td>
                                <td>${clas.date_created}</td>
                                <td>${clas.status}</td>`
            htmlListFaculty += `</tr>`

        })
        list_faculty.innerHTML = htmlListFaculty;

        btnAddFaculty.onclick = () => {
            //document.location.href = "/admin/createQuestion";
        }
        
    </script>
