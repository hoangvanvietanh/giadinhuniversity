    <script src="/js/Studious-selectbox.js"></script>
    <script src="/business/dataForAdmin.js"></script>
    <script>
        var htmlListFaculty = "";
        listClass.forEach(clas => {
            htmlListFaculty += `<tr>
                                <td>${clas.faculty}</td>
                                <td>${clas.list_major.length}</td>
                                <td>${clas.list_class.length}</td>
                                <td>${clas.date_created}</td>
                                <td>${clas.status}</td>`
            htmlListFaculty += `</tr>`

        })
        list_faculty.innerHTML = htmlListFaculty;

        btnCreateFaculty.onclick = () => {
            var khoa = {}
            var status = "";
            var radios = document.getElementsByName('status');

            for (var i = 0, length = radios.length; i < length; i++) {
                if (radios[i].checked) {
                    status = radios[i].value;
                    break;
                }
            }

            khoa.faculty = facultyName.value;
            khoa.status = status;
            khoa.date_created = Get_date_now();
            khoa.list_major = [];
            khoa.list_class = [];
            listClass.push(khoa);
            Them_Khoa(khoa);
            document.location.href = "/admin/faculty";
        }

    </script>
