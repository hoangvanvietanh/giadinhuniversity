        var i = 0;
        function moveButton(elem, value) {
            var cauHoi = value.replace(new RegExp('dauNhay', 'g'), '"');
            if ($(elem).parent().attr("id") == "Cau_hoi_chon") {
                $(elem).detach().appendTo('#list_cau_hoi');
                //console.log("bo chon");
                deleteIteamStorage(cauHoi)

            }
            else {
                $(elem).detach().appendTo('#Cau_hoi_chon');
                i++;
                localStorage.setItem(i, cauHoi);
            }
        }

        function allStorage() {
            var values = [],
                keys = Object.keys(localStorage),
                i = keys.length;

            while (i--) {
                values.push(localStorage.getItem(keys[i]));
            }

            return values;
        }

        function deleteIteamStorage(value) {
            var keys = Object.keys(localStorage),
                i = keys.length;

            while (i--) {
                var question = localStorage.getItem(keys[i]);
                if (question == value) {
                    localStorage.removeItem(keys[i]);
                }
            }
        }



        buttonAddExam.onclick = () => {
            var examCode = document.getElementById("examCode").value;
            var timeOfExam = document.getElementById("timeOfExam").value;
            var subject = document.getElementById("subject").value;
            var topic = document.getElementById("topic").value;
            var status = "";
            var semester = $("#semester option:selected").val();
            var radios = document.getElementsByName('status');
            var listQuestionOfExam = createListQuestionForExam();

            for (var i = 0, length = radios.length; i < length; i++) {
                if (radios[i].checked) {
                    status = radios[i].value;
                    break;
                }
            }
            createExam(examCode, timeOfExam, subject, topic, status, semester, listQuestionOfExam);
        }

        function createListQuestionForExam() {
            var listQuestionOfExam = [];
            questionListOfData.forEach(data => {
                data.question_list.forEach(content => {
                    var keys = Object.keys(localStorage),
                        i = keys.length;
                    do {
                        var question = localStorage.getItem(keys[i]);
                        if (question == content.question) {
                            listQuestionOfExam.push(content);
                        }
                    } while (i--)
                })
            })
            return listQuestionOfExam;
        }

        function createExam(examCode, timeOfExam, subject, topic, status, semester, questionList) {
            var exam = {}
            exam.exam_code = examCode;
            exam.topic = topic;
            exam.time = timeOfExam;
            exam.semester = semester;
            exam.status = status;
            exam.subject = subject;
            exam.date_created = Get_date_now();
            exam.question_list = JSON.stringify(questionList);
            exam.class_take_exam = [];
            //examList.push(exam);
            //Them_De_thi(exam);
            post("/admin/createExam", exam);
            localStorage.clear();
