        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Lớp học</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col">
                <div>
                    <h3 class="text-center">Danh sách lớp học</h3>
                </div>
                <div class="row">
                    <div class="col">
                        <form style="margin-top: 8px;">
                            <div class="field"><select class="form-control"
                                    style="border: none;border-bottom: 1px solid #757575;border-radius: 0;" id="myFaculty"
                                    onchange="chooseFaculty()">
                                    <optgroup label="Chọn khoa" id="list_faculty">
                                    </optgroup>
                                </select></div>
                        </form>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table fixed_header">
                        <thead>
                            <tr>
                                <th>Lớp</th>
                                <th>Chuyên ngành</th>
                                <th>Khóa</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="list_class">


                        </tbody>
                    </table>
                </div><button class="btn btn-primary btn-lg" style="width: 100%;" id="btnAddClass" type="button">Tạo lớp học</button>
            </div>
        </div>
    </div>
    <script src="/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/business/dataForAdmin.js"></script>
    <script>
        var htmlListFaculty = "<option value='Tất cả' >Tất cả</option>";
        listClass.forEach(clas => {
            htmlListFaculty += `<option value="${clas.faculty}" >${clas.faculty}</option>`
        })
        list_faculty.innerHTML = htmlListFaculty;

        chooseFaculty();
        function chooseFaculty() {
            var htmlListClass = "";
            listClass.forEach(clas => {
                if (clas.faculty == myFaculty.value) {
                    clas.list_class.forEach(classInList => {
                        htmlListClass += `<tr>
                                <td>${classInList.class_name}</td>
                                <td>${classInList.major}</td>
                                <td>${classInList.course}</td>
                                <td>${classInList.date_created}</td>
                                <td>${classInList.status}</td>`
                        htmlListClass += `</tr>`
                    })
                }
                if (myFaculty.value == "Tất cả") {
                    clas.list_class.forEach(classInList => {
                        htmlListClass += `<tr>
                                <td>${classInList.class_name}</td>
                                <td>${classInList.major}</td>
                                <td>${classInList.course}</td>
                                <td>${classInList.date_created}</td>
                                <td>${classInList.status}</td>`
                        htmlListClass += `</tr>`
                    })
                }
            })
            list_class.innerHTML = htmlListClass;
        }

        btnAddClass.onclick = () => {
            //document.location.href = "/admin/createQuestion";
        }
    </script>
