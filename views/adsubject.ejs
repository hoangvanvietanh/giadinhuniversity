    <script>

        var htmlListFaculty = "<option value='Tất cả' >Tất cả</option>";
        listClass.forEach(clas => {
            htmlListFaculty += `<option value="${clas.faculty}" >${clas.faculty}</option>`;
        })
        list_faculty.innerHTML = htmlListFaculty;


        chooseFaculty();
        function chooseFaculty() {
            var htmlListMajor = "<option value='Tất cả' >Tất cả</option>";
            listClass.forEach(major => {
                if (major.faculty == myFaculty.value) {
                    major.list_major.forEach(major => {
                        htmlListMajor += `<option value="${major.major_name}" >${major.major_name}</option>`
                    })
                }
            })
            list_major.innerHTML = htmlListMajor;
            chooseMajor();
        }

        function chooseMajor() {
            var htmlSubject = "";
            listSubject.forEach(subject => {
                if (myFaculty.value == "Tất cả" && myMajor.value == "Tất cả") {
                    var classFinished = 0;
                    var classUnfinished = 0;
                    subject.list_class_studying.forEach(clas => {
                        if (clas.status == "finished") {
                            classFinished++;
                        }
                        else {
                            classUnfinished++;
                        }
                    })
                    htmlSubject += `<tr>
                                <td>${subject.subject_name}</td>
                                <td>${subject.credits}</td>
                                <td>${classFinished}</td>
                                <td>${classUnfinished}</td>`
                    htmlSubject += `</tr>`
                }
                else {
                    if (subject.faculty == "All") {
                        var classFinished = 0;
                        var classUnfinished = 0;
                        subject.list_class_studying.forEach(clas => {
                            if (clas.status == "finished") {
                                classFinished++;
                            }
                            else {
                                classUnfinished++;
                            }
                        })
                        htmlSubject += `<tr>
                                <td>${subject.subject_name}</td>
                                <td>${subject.credits}</td>
                                <td>${classFinished}</td>
                                <td>${classUnfinished}</td>`
                        htmlSubject += `</tr>`
                    }
                    else {
                        subject.faculty.forEach(facultyName => {
                            if (facultyName == myFaculty.value) {
                                subject.major.forEach(majorName => {
                                    if (majorName == myMajor.value || myMajor.value == "Tất cả") {
                                        var classFinished = 0;
                                        var classUnfinished = 0;
                                        subject.list_class_studying.forEach(clas => {
                                            if (clas.status == "finished") {
                                                classFinished++;
                                            }
                                            else {
                                                classUnfinished++;
                                            }
                                        })
                                        htmlSubject += `<tr>
                                <td>${subject.subject_name}</td>
                                <td>${subject.credits}</td>
                                <td>${classFinished}</td>
                                <td>${classUnfinished}</td>`
                                        htmlSubject += `</tr>`
                                    }
                                })
                            }
                        })
                    }
                }
            })

            list_subject.innerHTML = htmlSubject;
        }





        btnAddFaculty.onclick = () => {
            //document.location.href = "/admin/createQuestion";
        }
       
    </script>
