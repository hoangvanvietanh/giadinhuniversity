    <script>
        var listClassOfDB = Doc_Danh_sach_Lop_Hoc().Danh_sach_Lop_hoc;
        var listClass = listClassOfDB;
        chooseClass();
        function chooseClass() {
            var htmlListClass = "";
            listClass.forEach(clas => {
                if (clas.faculty == mySelect.value) {
                    clas.list_class.forEach(x => {
                        htmlListClass += `<div onclick="moveButton(this,'${x.class_name}')" >${x.class_name}
                                </div>`
                    })

                    list_class.innerHTML = htmlListClass;

                }
            })
        }


        var listABC = ["A", "B", "C", "D", "E", "F"];
        examList.forEach(exam => {
            if (exam.exam_code == localStorage.getItem("examCode")) {
                console.log(exam)
                examCode.value = exam.exam_code;
                timeOfExam.value = exam.time;
                subject.value = exam.subject;
                topic.value = exam.topic;
                semester.value = exam.semester;
                if (exam.status == "open") {
                    raOpen.checked = true;
                }
                else {
                    raClose.checked = true;
                }

                var i = 0;
                var htmlQuestion = "";
                var htmlListLopThamGia = "";
                exam.question_list.forEach(content => {
                    i++;
                    htmlQuestion += `
                <div>
                            <tbody width="100%">
                                <tr>
                                    <td><b>Câu ${i}: ${content.question} </b></td>
                                    </br>
                                </tr>
                                <input type="hidden" id="CH${i}" value = "${content.question}">
                `
                    for (var k = 0; k < content.answer_list.length; k++) {
                        if (content.answer_list[k] == content.correct_answer) {
                            htmlQuestion += `
            <tr>
            <td><b>${listABC[k]}. ${content.answer_list[k]}</b></td></br>
            </tr>
            `
                        }
                        else {
                            htmlQuestion += `
            <tr>
            <td>${listABC[k]}. ${content.answer_list[k]}</td></br>
            </tr>
            `
                        }
                    }
                    htmlQuestion += "</tbody></br></div>";

                });


                exam.class_take_exam.forEach(classInExam => {
                    htmlListLopThamGia += `<div onclick="moveButton(this,'${classInExam}')" >${classInExam}
                                </div>`
                })
                Cau_hoi_chon.innerHTML = htmlQuestion;
                list_lop_tham_gia.innerHTML = htmlListLopThamGia;
            }
        })


        var i = 0;
        function moveButton(elem, value) {
            if ($(elem).parent().attr("id") == "list_lop_tham_gia") {
                $(elem).detach().appendTo('#list_class');
                deleteIteamStorage(value)
            }
            else {
                $(elem).detach().appendTo('#list_lop_tham_gia');
                i++;
                localStorage.setItem(i, value);
            }
        }


        function deleteIteamStorage(value) {
            var keys = Object.keys(localStorage),
                i = keys.length;

            while (i--) {
                var question = localStorage.getItem(keys[i]);
                if (question == value) {
                    localStorage.removeItem(keys[i]);
                }
            }
        }
        if (imageExists(`/img/<%= user.student_code %>.jpg`) == false) {
            document.getElementById("imageid").src = "/img/andanh.png";
        }
    </script>
